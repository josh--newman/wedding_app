$("#invite").empty();
$("#status").empty();

var guests = $("<%= escape_javascript(render 'form') %>");
guests.toggleClass("hide").appendTo("#invite");
guests.slideDown("fast");

$("*[id*=has_dietary]").each(function() {
  var text_area_index = $(this).attr("id").substr(25);
  var text_area = $("#"+text_area_index)

  if (this.checked && $(text_area).hasClass("hide")) {
    text_area.show();
  }

  $(this).on("change", function() {
    if (this.checked) {
      text_area.slideDown("fast");
    }
    else {
      text_area.slideUp("fast");
      text_area.find("textarea").val("");
    }
  });
});

