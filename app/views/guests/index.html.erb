<div class="row">
  <div class="small-12 small-centered columns">
    <table>
      <thead>
        <th>Name</th>
        <th>Coming?</th>
        <th>Dietary</th>
        <th>Updated</th>
      </thead>
      <tbody>
        <% @guests.each do |guest| %>
          <tr>
            <td><%= guest.name %></td>
            <td><%= guest.is_coming %></td>
            <td><%= guest.dietary %></td>
            <td><%= "#{distance_of_time_in_words_to_now(guest.updated_at, include_seconds: true)} ago" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
